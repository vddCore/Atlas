<ResourceDictionary
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="clr-namespace:Atlas.UI">

    <Style x:Key="CaptionButtonStyle" TargetType="{x:Type Button}">
        <Setter Property="BorderThickness" Value="0" />
        <Setter Property="Background" Value="Transparent" />

        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="{x:Type Button}">
                    <Grid x:Name="PART_MainGrid"
                          Background="Transparent">
                        <ContentPresenter HorizontalAlignment="Center"
                                          VerticalAlignment="Center"
                                          Content="{TemplateBinding Content}" />
                    </Grid>


                    <ControlTemplate.Triggers>
                        <Trigger Property="IsMouseOver" Value="True">
                            <Setter TargetName="PART_MainGrid" Property="Background" Value="#3F3F41" />
                        </Trigger>

                        <Trigger Property="IsPressed" Value="True">
                            <Setter TargetName="PART_MainGrid" Property="Background" Value="#007ACC" />
                        </Trigger>
                    </ControlTemplate.Triggers>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

    <Style TargetType="{x:Type local:AtlasWindow}">
        <Setter Property="Background" Value="#2D2D30" />

        <Setter Property="WindowChrome.WindowChrome">
            <Setter.Value>
                <WindowChrome CaptionHeight="0"
                              CornerRadius="0"
                              GlassFrameThickness="-1"
                              ResizeBorderThickness="4"
                              UseAeroCaptionButtons="False" />
            </Setter.Value>
        </Setter>

        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="{x:Type local:AtlasWindow}">
                    <Border x:Name="PART_MainBorder"
                            Background="{TemplateBinding Background}"
                            BorderBrush="#0079CB"
                            BorderThickness="1">
                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto" />
                                <RowDefinition Height="*" />
                            </Grid.RowDefinitions>

                            <Border x:Name="PART_Caption"
                                    Height="30" 
                                    Background="{TemplateBinding Background}" 
                                    BorderThickness="0"
                                    BorderBrush="Transparent"
                                    VerticalAlignment="Top"
                                    HorizontalAlignment="Stretch"
                                    Grid.Row="0">
                                <Grid>
                                    <TextBlock x:Name="PART_Title"
                                               Text="{TemplateBinding Title}"
                                               Margin="8,0,0,0" 
                                               VerticalAlignment="Center" 
                                               HorizontalAlignment="Left"
                                               Foreground="#999999" />

                                    <StackPanel Orientation="Horizontal"
                                                VerticalAlignment="Top"
                                                HorizontalAlignment="Right">
                                        <Button x:Name="PART_Minimize"
                                                Width="30"
                                                Height="30"
                                                Style="{StaticResource CaptionButtonStyle}">
                                            <Image VerticalAlignment="Center"
                                                   HorizontalAlignment="Center"
                                                   SnapsToDevicePixels="True"
                                                   Height="16"
                                                   Width="17"
                                                   RenderOptions.BitmapScalingMode="NearestNeighbor"
                                                   Source="pack://application:,,,/Atlas.UI;component/Resources/CaptionButtons/caption_minimize.png" />
                                        </Button>
                                        <Button x:Name="PART_Maximize"
                                                Width="30"
                                                Height="30"
                                                Style="{StaticResource CaptionButtonStyle}">
                                            <Image VerticalAlignment="Center"
                                                   HorizontalAlignment="Center"
                                                   SnapsToDevicePixels="True"
                                                   Height="16"
                                                   Width="17"
                                                   RenderOptions.BitmapScalingMode="NearestNeighbor"
                                                   Source="pack://application:,,,/Atlas.UI;component/Resources/CaptionButtons/caption_maximize.png" />
                                        </Button>
                                        <Button x:Name="PART_Close"
                                                    Width="30"
                                                    Height="30"
                                                    Style="{StaticResource CaptionButtonStyle}">
                                            <Image VerticalAlignment="Center"
                                                   HorizontalAlignment="Center"
                                                   SnapsToDevicePixels="True"
                                                   Height="16"
                                                   Width="17"
                                                   RenderOptions.BitmapScalingMode="NearestNeighbor"
                                                   Source="pack://application:,,,/Atlas.UI;component/Resources/CaptionButtons/caption_close.png" />
                                        </Button>
                                    </StackPanel>
                                </Grid>
                            </Border>

                            <ContentPresenter Grid.Row="1" Content="{TemplateBinding Content}"/>
                        </Grid>
                    </Border>

                    <ControlTemplate.Triggers>
                        <Trigger Property="IsActive" Value="False">
                            <Setter TargetName="PART_Title" Property="Foreground" Value="#6F6F70" />
                            <Setter TargetName="PART_MainBorder" Property="BorderBrush" Value="#424245" />
                        </Trigger>
                    </ControlTemplate.Triggers>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

    <Style x:Key="CloseTabButton" TargetType="{x:Type Button}">
        <Setter Property="BorderThickness" Value="0" />
        <Setter Property="Background" Value="Transparent" />

        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="{x:Type Button}">
                    <Grid x:Name="PART_Main">
                        <Image VerticalAlignment="Center"
                               HorizontalAlignment="Center"
                               SnapsToDevicePixels="True"
                               Height="16"
                               Width="17"
                               RenderOptions.BitmapScalingMode="NearestNeighbor"
                               Source="pack://application:,,,/Atlas.UI;component/Resources/CaptionButtons/caption_close.png" />
                    </Grid>

                    <ControlTemplate.Triggers>
                        <Trigger Property="IsMouseOver" Value="True">
                            <Setter TargetName="PART_Main" Property="Background" Value="#1C97EA" />
                        </Trigger>

                        <Trigger Property="IsPressed" Value="True">
                            <Setter TargetName="PART_Main" Property="Background" Value="#0E6198" />
                        </Trigger>
                    </ControlTemplate.Triggers>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

    <Style x:Key="ScrollLeftTabPanelButton" TargetType="{x:Type Button}">
        <Setter Property="BorderThickness" Value="0" />
        <Setter Property="Background" Value="Transparent" />

        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="{x:Type Button}">
                    <Grid x:Name="PART_Main">
                        <Image VerticalAlignment="Center"
                               HorizontalAlignment="Center"
                               SnapsToDevicePixels="True"
                               Height="16"
                               Width="17"
                               RenderOptions.BitmapScalingMode="NearestNeighbor"
                               Source="pack://application:,,,/Atlas.UI;component/Resources/TabPanel/tabpanel_scroll_left.png" />
                    </Grid>

                    <ControlTemplate.Triggers>
                        <Trigger Property="IsMouseOver" Value="True">
                            <Setter TargetName="PART_Main" Property="Background" Value="#3E3E40" />
                        </Trigger>

                        <Trigger Property="IsPressed" Value="True">
                            <Setter TargetName="PART_Main" Property="Background" Value="#007ACC" />
                        </Trigger>
                    </ControlTemplate.Triggers>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

    <Style x:Key="ScrollRightTabPanelButton" TargetType="{x:Type Button}">
        <Setter Property="BorderThickness" Value="0" />
        <Setter Property="Background" Value="Transparent" />

        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="{x:Type Button}">
                    <Grid x:Name="PART_Main">
                        <Image VerticalAlignment="Center"
                               HorizontalAlignment="Center"
                               SnapsToDevicePixels="True"
                               Height="16"
                               Width="17"
                               RenderOptions.BitmapScalingMode="NearestNeighbor"
                               Source="pack://application:,,,/Atlas.UI;component/Resources/TabPanel/tabpanel_scroll_right.png" />
                    </Grid>

                    <ControlTemplate.Triggers>
                        <Trigger Property="IsMouseOver" Value="True">
                            <Setter TargetName="PART_Main" Property="Background" Value="#3E3E40" />
                        </Trigger>

                        <Trigger Property="IsPressed" Value="True">
                            <Setter TargetName="PART_Main" Property="Background" Value="#007ACC" />
                        </Trigger>
                    </ControlTemplate.Triggers>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

    <Style x:Key="TabMenuButton" TargetType="{x:Type MenuItem}">
        <Setter Property="BorderThickness" Value="0" />
        <Setter Property="Background" Value="Transparent" />

        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="{x:Type MenuItem}">
                    <Grid x:Name="PART_Main">
                        <Image VerticalAlignment="Center"
                               HorizontalAlignment="Center"
                               SnapsToDevicePixels="True"
                               Height="16"
                               Width="17"
                               RenderOptions.BitmapScalingMode="NearestNeighbor"
                               Source="pack://application:,,,/Atlas.UI;component/Resources/TabPanel/tabpanel_tabmenu.png" />
                        <Popup Placement="Bottom" 
                               IsOpen="{TemplateBinding IsSubmenuOpen}"
                               SnapsToDevicePixels="True">
                            <Popup.Effect>
                                <DropShadowEffect Color="Black"
                                                  BlurRadius="5"
                                                  Direction="0"
                                                  ShadowDepth="2"/>
                            </Popup.Effect>
                            <Border Background="Transparent"
                                    BorderBrush="#333337"
                                    BorderThickness="1">
                                <StackPanel IsItemsHost="True" />
                            </Border>
                        </Popup>

                    </Grid>



                    <ControlTemplate.Triggers>
                        <MultiTrigger>
                            <MultiTrigger.Conditions>
                                <Condition Property="IsHighlighted" Value="True" />
                                <Condition Property="IsSubmenuOpen" Value="False" />
                            </MultiTrigger.Conditions>
                            <Setter TargetName="PART_Main" Property="Background" Value="#3E3E40" />
                        </MultiTrigger>

                        <MultiTrigger>
                            <MultiTrigger.Conditions>
                                <Condition Property="IsHighlighted" Value="True" />
                                <Condition Property="IsSubmenuOpen" Value="True" />
                            </MultiTrigger.Conditions>

                            <Setter TargetName="PART_Main" Property="Background" Value="#1B1B1C" />
                        </MultiTrigger>
                    </ControlTemplate.Triggers>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

    <Style x:Key="TabMenuItem" TargetType="{x:Type MenuItem}">
        <Setter Property="Header" Value="{Binding Path=Header}" />
        <Setter Property="Foreground" Value="White" />
        <Setter Property="IsCheckable" Value="True" />
        <Setter Property="IsChecked" Value="{Binding Path=IsSelected, Mode=TwoWay}" />

        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="{x:Type MenuItem}">
                    <Border x:Name="PART_Border"
                            Background="#1B1B1C"
                            BorderThickness="0"
                            Padding="5,3,30,3">

                        <ContentPresenter Content="{TemplateBinding Header}"
                                              HorizontalAlignment="Stretch"
                                              VerticalAlignment="Center"
                                              Margin="0" />

                    </Border>


                    <ControlTemplate.Triggers>
                        <Trigger Property="IsHighlighted" Value="True">
                            <Setter TargetName="PART_Border" Property="Background" Value="#333334" />
                        </Trigger>
                    </ControlTemplate.Triggers>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

    <Style TargetType="{x:Type local:AtlasTabControl}">
        <Setter Property="Background" Value="#2D2D30" />
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="{x:Type local:AtlasTabControl}">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="2" />
                            <RowDefinition Height="*" />
                        </Grid.RowDefinitions>

                        <Grid Grid.Row="0"
                              HorizontalAlignment="Stretch">

                            <Menu x:Name="PART_TabMenuParent"
                                  Background="Transparent">
                                <MenuItem x:Name="PART_TabMenu"
                                          Style="{StaticResource TabMenuButton}"
                                          Width="15"
                                          Height="20"
                                          HorizontalAlignment="Left"
                                          VerticalAlignment="Stretch"
                                          ItemsSource="{Binding RelativeSource={RelativeSource FindAncestor, AncestorType={x:Type local:AtlasTabControl}}, Path=Items}"
                                          ItemContainerStyle="{StaticResource TabMenuItem}"/>
                            </Menu>

                            <ScrollViewer x:Name="PART_Scroller"
                                          HorizontalScrollBarVisibility="Hidden"
                                          VerticalScrollBarVisibility="Hidden"
                                          Height="20"
                                          Margin="15,0,39,0">
                                <TabPanel x:Name="PART_TabPanel"
                                          Background="#2D2D30" 
                                          HorizontalAlignment="Stretch"
                                          VerticalAlignment="Top" 
                                          IsItemsHost="True" 
                                          Height="20"  />
                            </ScrollViewer>

                            <Button x:Name="PART_ScrollLeft"
                                    Width="20"
                                    Height="20"
                                    Margin="0,0,19,0"
                                    HorizontalAlignment="Right"
                                    VerticalAlignment="Stretch"
                                    Style="{StaticResource ScrollLeftTabPanelButton}" />

                            <Button x:Name="PART_ScrollRight"
                                    Width="20"
                                    Height="20"
                                    HorizontalAlignment="Right"
                                    VerticalAlignment="Stretch"
                                    Style="{StaticResource ScrollRightTabPanelButton}" />
                        </Grid>

                        <Rectangle Grid.Row="1"
                              VerticalAlignment="Stretch"
                              HorizontalAlignment="Stretch" 
                              Fill="#0079CB" />

                        <ContentPresenter Grid.Row="2" 
                                          ContentSource="SelectedContent"
                                          VerticalAlignment="Stretch"
                                          HorizontalAlignment="Stretch" />
                    </Grid>

                    <ControlTemplate.Triggers>
                        <MultiTrigger>
                            <MultiTrigger.Conditions>
                                <Condition SourceName="PART_Scroller" Property="ScrollableWidth" Value="0" />
                                <Condition Property="HasItems" Value="False" />
                            </MultiTrigger.Conditions>

                            <Setter TargetName="PART_ScrollLeft" Property="Visibility" Value="Collapsed" />
                            <Setter TargetName="PART_ScrollRight" Property="Visibility" Value="Collapsed" />
                            <Setter TargetName="PART_TabMenuParent" Property="Visibility" Value="Collapsed" />

                            <Setter TargetName="PART_Scroller" Property="Margin" Value="0,0,0,0" />
                        </MultiTrigger>
                        
                        <MultiTrigger>
                            <MultiTrigger.Conditions>
                                <Condition SourceName="PART_Scroller" Property="ScrollableWidth" Value="0" />
                                <Condition Property="HasItems" Value="True" />
                            </MultiTrigger.Conditions>

                            <Setter TargetName="PART_ScrollLeft" Property="Visibility" Value="Collapsed" />
                            <Setter TargetName="PART_ScrollRight" Property="Visibility" Value="Collapsed" />
                            <Setter TargetName="PART_TabMenuParent" Property="Visibility" Value="Visible" />

                            <Setter TargetName="PART_Scroller" Property="Margin" Value="15,0,0,0" />
                        </MultiTrigger>
                    </ControlTemplate.Triggers>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

    <Style TargetType="{x:Type local:AtlasTabItem}">
        <Setter Property="Background" Value="#2D2D30" />
        <Setter Property="AllowDrop" Value="True" />

        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="{x:Type local:AtlasTabItem}">
                    <Grid Name="PART_Tab"
                          Background="#2D2D30">
                        <StackPanel Orientation="Horizontal" Height="Auto" VerticalAlignment="Stretch">
                            <TextBlock x:Name="PART_Content"
                                          VerticalAlignment="Center"
                                          HorizontalAlignment="Left"
                                          Text="{TemplateBinding Header}"
                                          Margin="5,2,5,2"
                                          Foreground="White"
                                          FontSize="12"
                                          TextAlignment="Left"/>
                            <Button x:Name="PART_CloseButton"
                                    Width="15"
                                    Height="15"
                                    HorizontalAlignment="Left"
                                    VerticalAlignment="Center"
                                    Style="{StaticResource CloseTabButton}"
                                    Margin="5,2,5,2" />
                        </StackPanel>

                    </Grid>

                    <ControlTemplate.Triggers>
                        <Trigger Property="IsSelected" Value="True">
                            <Setter TargetName="PART_Tab" Property="Background" Value="#0079CB" />
                        </Trigger>

                        <MultiTrigger>
                            <MultiTrigger.Conditions>
                                <Condition SourceName="PART_Tab" Property="IsMouseOver" Value="True" />
                                <Condition Property="IsSelected" Value="False" />
                            </MultiTrigger.Conditions>

                            <Setter TargetName="PART_Tab" Property="Background" Value="#1C97EA" />
                        </MultiTrigger>
                    </ControlTemplate.Triggers>
                </ControlTemplate>

            </Setter.Value>
        </Setter>
    </Style>
</ResourceDictionary>
